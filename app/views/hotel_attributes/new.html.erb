<% content_for :title, "BestNights.com - Add Hotel Attribute" %>

<header>
	<h1>Add Hotel Attribute</h1>
</header>

<div id="container-main">
	<%= form_for @hotel_attribute do |f| %>
				
		<div class="input-box">
		  <div class="input-align"><%= f.label :attribute %></div>
		  <div class="input-align"><%= f.text_field :attr %></div>
		</div>
		 
		<div class="input-box">
		  <%= f.submit %>
		</div>
	<% end %>
</div>
