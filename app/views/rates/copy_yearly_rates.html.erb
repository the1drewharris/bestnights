<div class="content-wrapper adm-inr">
  <div id="container-main">
    <header>
      <h1 class="prop-title"><%= session[:hotel_name] %> (ID: <%= session[:hotel_id] %>)</h1>
    </header>
    <%= render partial: "/common/navigation_tab"%>
<div class="rtSidebar">
  <div class="section">
    <h3 class="title-bcg">Copy Yearly Rates</h3>
    <form action="/update_room_rates" method="post">
    <div class="bookings blocks">
      <% my_date = Time.now %>
      <div style="margin-bottom:10px; clear:both; overflow:hidden;">
      <span>From Date: </span><%= text_field_tag 'from_date', "", :name => "from_date", :class => "datepicker1", :readonly => "readonly" %>
      <span>To Date: </span><%= text_field_tag 'to_date', "", :name => "to_date", :class => "datepicker1", :readonly => "readonly" %>
      </div>
      <div class="scroll">
        <table id="which" width="100%" border="0">
        <tbody>
          <tr>
            <td width="33%" align="left" valign="top">
            <div class="row mrgntp15">
              For:
            </div>
            <div class="row break">
            <input id="rc-0" type="checkbox" value="0" name="so">
            <label for="so-0">All Rate Categories</label>
            </div>
           <div class="row mrgntp15">
            or for one or more of these Rooms:
            </div>
            <div id="so-inject" style="margin: 0 0 5px;"></div>
            <div class="row break">
            <% RateCategory.all.each do |rate|%>
              <input type="checkbox" id="" name="rate_cat_id[<%= rate.id %>]" class="rc">
              <label><%= rate.name %></label><div style="height:12px; clear:both;"></div>
            <% end %>
            </div>
            </td>
            <td align="left" valign="top">
            <div class="row mrgntp15">
              For:
            </div>
            <div class="row break">
              <input id="so-0" type="checkbox" value="0" name="so">
              <label for="so-0">All Rooms</label>
            </div>
            <div class="row mrgntp15">
              or for one or more of these Rooms:
            </div>
            <div id="so-inject" style="margin: 0 0 5px;"></div>
            
            <% RoomType.all.each do |room|%>
            <div class="row break">
              <input type="checkbox" id="" name="room_id[<%= room.id %>]" class="so">
              <label><%= room.room_type %></label><div style="clear:both;"></div>
            </div>
            <% end %>
          
            </td>
          </tr>
        </tbody>
      </table>
        <table class="wizard-selector">
        <tbody>
          <tr>
            <td style="padding-right:5px;">I want to</td>
            <td>
              <select name="modify">
                <option value="copy">
                  Use the same rates as this year
                </option>
                <option value="fix-increase">
                  Increase rates by a fixed amount of CAD
                </option>
                <option value="percent-increase">
                  Increase rates by a percentage of this year's rate
                </option>
                <option value="fix-decrease">
                  Reduce rates by a fixed amount of CAD
                </option>
                <option value="percent-decrease">
                  Reduce rates by a percentage of this year's rate
                </option>
              </select>
            </td>
          </tr>
         </tbody>
          </table>
          <br />
           Room Rate Per Night: <%= text_field_tag 'price', "", :name => "price" %> CAD
           <br />
           <br />
        </div>
        <input type="submit" value="Update" name="submit" min="1" >
        </div>
      </form>
      </div>
    </div>
    <div class="height350 overflow">&nbsp;</div>
  </div>
</div>
<script>
  $(function() {
    $( ".datepicker1" ).datepicker({format: 'yyyy-mm-dd'});
    $("#wd-0").click(function(event){
      if(this.checked){
        $(".wd").each(function(){
          this.checked = true;
        })
      }
      else{
        $(".wd").each(function(){
          this.checked = false;
        })    
      }
    })
    $("#so-0").click(function(event){
      if(this.checked){
        $(".so").each(function(){
          this.checked = true;
        })
      }
      else{
        $(".so").each(function(){
          this.checked = false;
        })    
      }
    })
  });
</script>