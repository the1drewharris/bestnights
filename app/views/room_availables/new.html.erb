<div class="content-wrapper adm-inr">
  <div id="container-main">
    <header>
      <h5 class="prop-title"><%= session[:hotel_name] %>(Id: <%= session[:hotel_id] %>)</h5>
    </header>
    <%= render partial: "/common/navigation_tab"%>
    <div class="rtSidebar">
      <div class="section">
        <h3>Adjust Rooms To Sell</h3>
          <form action="/room_availables" method="post">
          <div class="bookings blocks">
          <% my_date = Time.now %>
          <div style="margin-bottom:10px; clear:both; overflow:hidden;">
          <span>From Date: </span><%= text_field_tag 'from_date', "", :name => "from_date", :class => "datepicker1", :readonly => "readonly" %>
          <span>To Date: </span><%= text_field_tag 'to_date', "", :name => "to_date", :class => "datepicker1", :readonly => "readonly" %>
          </div>
          <div class="scroll">
            <table id="which" width="100%" border="0">
      <tbody>
        <tr>
          <td align="left" valign="top" width="33%">
            On:
            <div class="row">
              <input id="wd-0" type="checkbox" value="0" name="wd">
              <label for="wd-0">All Days</label>
            </div>            
            <div class="row mrgntp15">
              or one or more of these days:
            </div>
            <div class="row">
            <input id="wd-1" type="checkbox" value="1" name="days[monday]" class="wd" >
            <label for="wd-1">Monday</label>
           </div>
           <div class="row">
            <input id="wd-2" type="checkbox" value="2" name="days[tuesday]" class="wd" >
            <label for="wd-2">Tuesday</label>
           </div>
           <div class="row">
            <input id="wd-3" type="checkbox" value="3" name="days[wednesday]" class="wd" >
            <label for="wd-3">Wedenesday</label>
           </div>
           <div class="row">
            <input id="wd-4" type="checkbox" value="4" name="days[thursday]" class="wd" >
            <label for="wd-4">Thursday</label>
           </div>
           <div class="row">
            <input id="wd-5" type="checkbox" value="5" name="days[friday]" class="wd" >
            <label for="wd-5">Friday</label>
            </div>
            <div class="row">
            <input id="wd-6" type="checkbox" value="6" name="days[saturday]" class="wd" >
            <label for="wd-6">Saturday</label>
            </div>
            <div class="row">
            <input id="wd-7" type="checkbox" value="7" name="days[sunday]" class="wd" >
            <label for="wd-7">Sunday</label>
            </div>
          </td>
          <td width="33%" align="left" valign="top">
            For:
          <input id="so-0" type="checkbox" value="0" name="so">
          <label for="so-0">All Rooms</label>
          <br>
          <div> </div>
          or for one or more of these Rooms:
          <br>
          <div id="so-inject" style="margin: 0 0 5px;"></div>
          <% RoomType.all.each do |room|%>
            <input type="checkbox" id="" name="room_id[<%= room.id %>]" style="float:left; margin-top:4px;" class="so" >
            <label><%= room.room_type %></label><div style="height:12px; clear:both;"></div>
          <% end %>
          </td>
        </tr>
      </tbody>
    </table>
    <div>
      Number of rooms to make available:
      <input type="number" name="rooms_to_sell" min="1">
    </div>
    <p><input type="submit" value="Update Rooms for Sell" name="submit" ></p>
  </div>
    </div>
  </form>
      </div>
  </div>
</div>
<div class="height350 overflow">&nbsp;</div>
</div>


<script>
  $(function() {
    $( ".datepicker1" ).datepicker({format: 'yyyy-mm-dd'});
    $("#wd-0").click(function(event){
      if(this.checked){
        $(".wd").each(function(){
          this.checked = true;
        })
      }
      else{
        $(".wd").each(function(){
          this.checked = false;
        })    
      }
    })
    $("#so-0").click(function(event){
      if(this.checked){
        $(".so").each(function(){
          this.checked = true;
        })
      }
      else{
        $(".so").each(function(){
          this.checked = false;
        })    
      }
    })
  });
</script>