<% content_for :title, "BestNights.com - Edit Venue" %>

<header>
	<h1 class="prop-title">Edit Venue</h1>
</header>

<div id="container-main">
	<%= form_for @venue do |f| %>
		<fieldset>
		  <ul>
		  	<li>
		  		<%= f.label 'Name' %>
		  		<%= f.text_field :name %>
		  	</li>
		  	<li>
		  		<%= f.label :description %>
		  		<%= f.text_area :description %>
		  	</li>
		  	<li>
		  		<%= f.label :address1 %>
		  		<%= f.text_field :address1 %>
		  	</li>
		  	<li>
		  		<%= f.label :address2 %>
		  		<%= f.text_field :address2 %>
		  	</li>
		  	<li>
		  		<%= f.label :city %>
		  		<%= f.text_field :city %>
		  	</li>
		  	<li>
		  		<%= f.label :zip %>
		  		<%= f.text_field :zip %>
		  	</li>
		  	<li>
		  		<%= f.label :state %>
		  		<%= f.select :state_id, options_for_select(State.all.map{|s|[s.state_province, s.id]}) %>
		  	</li>
		  </ul>	
		</fieldset>
		<fieldset class="formactions">
			<%= f.submit %>
		</fieldset>
	<% end %>
</div>

<%= javascript_include_tag :jquery_ujs %>