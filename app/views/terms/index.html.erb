<div id="container-main">
<h1 class="prop-title">Terms and Conditions</h1> 
<table class="admintablelist">
  <tr>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @terms.each do |term| %>
  <tr>
    <td><%= term.content.html_safe unless term.content.nil? %></td>
    <td><%= link_to 'Show', term %></td>
    <td><%= link_to 'Edit', edit_term_path(term) %></td>
    <td><%= link_to 'Destroy', term, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />
<% if @terms.blank? %>
  <%= link_to 'New Privacy policy', new_term_path %>
<% end %>
</div>
