<% content_for :title, "BestNights.com - Room Type" %>

<header>
  <h1 class="prop-title">Room Sub Type</h1>
</header>

<%= form_tag room_sub_types_path, :id => "search_form", :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<div id="container-main">
  <div class="formactions">
    <%= link_to "Add", new_room_sub_type_path %>
  </div>
  <table class="admintablelist">
    <tr>
      <th>Name</th>
      <th>Room Type</th>
      <th>Action</th>
      <th></th>
      <th></th>
    </tr>
    <% @room_sub_types.each do |rst| %>
      <tr>
        <td><%= rst.name %></td>
        <td><%= rst.room_type.room_type %></td>
        <% if can? :show, rst %>
          <td><%= link_to "Show", room_sub_type_path(rst) %></td>
        <% end %>
        <% if can? :edit, rst %>
          <td><%= link_to "Edit", edit_room_sub_type_path(rst) %></td>
        <% end %>
        <% if can? :delete, rst %>
          <td><%= link_to "Delete", room_sub_type_path(rst), :method => :delete %></td>
        <% end %> 
      </tr>
    <% end %>
  </table>
</div>

<%= javascript_include_tag :jquery_ujs %>