<div class="content-wrapper adm-inr">
	<div id="container-main">
    <header>
      <h1 class="prop-title"><%= session[:hotel_name] %>(ID: <%= session[:hotel_id] %>)</h1>
    </header>
    <%= render partial: "/common/navigation_tab"%>
    <div class="rtSidebar">
      <div class="section">
        <h3 class="title-bcg">Invoicing Details</h3>
        <div class="bookings blocks">
          <div class="scroll">
          	<table class="bookconf invoiceDet" width="100%" border="0">
							<tbody>
								<tr>
								  <td align="left" valign="middle"><strong>Contracted by</strong></td>
								  <td align="center" valign="middle">BestNights.com</td>
								</tr>
								<tr>
								  <td align="left" valign="middle"><strong>Company name for invoicing</strong></td>
								  <td align="center" valign="middle"><%= @hotel.name %></td>
								</tr>
								<tr>
								  <td align="left" valign="middle"><strong>Legal Address</strong></td>
								  <td align="center" valign="middle"><%= @hotel.address1 %></td>
								</tr>
								<tr>
								  <td align="left" valign="middle"><strong>Legal Zip code</strong></td>
								  <td align="center" valign="middle"><%= @hotel.zip %></td>
								</tr>
								<tr>
								  <td align="left" valign="middle"><strong>Legal City</strong></td>
								  <td align="center" valign="middle"><%= @hotel.city %></td>
								</tr>
								<tr>
								  <td align="left" valign="middle"><strong>Legal Country</strong></td>
								  <td align="center" valign="middle">Canada</td>
								</tr>
								<tr>
								  <td align="left" valign="middle"><strong>Invoice Medium</strong></td>
								  <td align="center" valign="middle">Email to <%= @hotel.email %> in language "en" </td>
								</tr>
							</tbody>
						</table>
          </div>
        </div>
      </div>
    </div>
    <div class="height350 overflow">&nbsp;</div>
  </div>
</div>