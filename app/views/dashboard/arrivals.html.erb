<div class="bookconfTab">
	<div class="arrival blocks">
	<div style="display:none;"><%= link_to "Home", dashboard_path, class: "links" %></div>
	<h2>Arrivals</h2>
	<ul id="links"><li class="active"><%= link_to "Today", arrivals_path(:day => "todays"), class: "" %></li><li><%= link_to "Yesterday", arrivals_path(:day => "yesterday"), class: "" %></li><li><%= link_to "Future", arrivals_path(:day => "future"), class: "" %></li></ul>
	<table class="bookconf" width="100%" border="0">
		<thead>
		<tr>
			<td align="center" valign="middle">Resrvation No</td>
			<td align="center" valign="middle">Booker Name</td>
		</tr>
	</thead>
	<tbody>
		<% if !@arrivals.blank? %>
		<% @arrivals.each do |arrival| %>
				<tr>
					<td align="center" valign="middle"><%= arrival.id %></td>
					<td align="center" valign="middle"><%= arrival.traveler.name %></td>
				</tr>
		<% end %>
		<% end %>
	</tbody>
	</table>
</div>
</div>
