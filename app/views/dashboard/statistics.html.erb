<div class="content-wrapper adm-inr">
	<div id="container-main">
    <header>
      <h1 class="prop-title"><%= session[:hotel_name] %> (ID: <%= session[:hotel_id] %>)</h1>
    </header>
    <%= render partial: "/common/navigation_tab"%>
    <div class="rtSidebar">
      <div class="section">
        <h3 class="title-bcg">Statistics</h3>
        <div class="bookings blocks">
          <div class="scroll">
          	<table class="bookconf" width="100%" border="0">
							<thead>
								<tr>
								 <td align="left" valign="middle">Subject</td>
								  <td align="center" valign="middle">Today</td>
								  <td align="center" valign="middle">This week</td>
								  <td align="center" valign="middle">This Month</td>
								  <td align="center" valign="middle">This Year</td>
								</tr>
							</thead>
							<tbody>
								<tr>
								  <td align="left" valign="middle">Property Views</td>
								  <td align="center" valign="middle">
										<% if !@hotel_day_wise.blank?  %>
											<%= @hotel_day_wise.first["c"] %>
										<% end %>
								  </td>
								  <td align="center" valign="middle">
										<% if !@hotel_week_wise.blank?  %>
											<%= @hotel_week_wise.count %>
										<% end %>
								  </td>		
								  <td align="center" valign="middle">
										<% if !@hotel_month_wise.blank? %>
											<%= @hotel_month_wise.first["c"] %>
										<% end %>
									</td>
								  <td align="center" valign="middle">
								  	<% if !@hotel_year_wise.blank?  %>
											<%= @hotel_year_wise.first["c"] %>
										<% end %>
									</td>
								</tr>
								<tr>
								  <td align="left" valign="middle">Booking</td>
								  <td align="center" valign="middle">
										<%= @bookings_day_wise.count %>
									</td>
									<td align="center" valign="middle">
										<%= @bookings_week_wise.count %>
									</td>	
								  <td align="center" valign="middle">
										<%= @bookings_month_wise.count %>
									</td>
								  <td align="center" valign="middle">
										<%= @bookings_year_wise.count %>
									</td>
								</tr>
								<tr>
								  <td align="left" valign="middle">Total Nights Sold</td>
								  <td align="center" valign="middle">
										<%= @total_nights_today %>
									</td>
									<td align="center" valign="middle">
										<%= @total_nights_this_week %>
									</td>	
								  <td align="center" valign="middle">
										<%= @total_nights_this_month %>
									</td>
								  <td align="center" valign="middle">
										<%= @total_nights_this_year %>
									</td>
								</tr>
							</tbody>
						</table>
          </div>
        </div>
      </div>
    </div>
    <div class="height350 overflow">&nbsp;</div>
  </div>
</div>