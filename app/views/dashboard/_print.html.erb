        <td align="center" valign="middle" bgcolor="#f7f7f7" style="padding:5px; font-family:Arial, Helvetica, sans-serif; font-size:13px; line-height:17px; color:#000000; text-transform:none; font-weight:normal; font-style:normal; border:none; border-bottom:1px solid #FFFFFF;">
          <% unless @hotel.commission_rate.blank?  %>
            <%= (booking.price.to_f * (@hotel.commission_rate.amount.to_f).to_f) / 100 %>
          <% else %>
            <%= (booking.price.to_f * 12) / 100 %>
          <% end %>
        </td>
      </tr>
      <% @total += booking.price.to_f %>
      <% unless @hotel.commission_rate.blank? %>
        <% @commission += (booking.price.to_f * (@hotel.commission_rate.amount.to_f).to_f) / 100 %>
      <% else %>
        <% @commission += (booking.price.to_f * 12) / 100 %>
      <% end %>
