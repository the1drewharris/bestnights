<div id="wrapper">
	<div id="eyebrow">
		<div class="logo">
			<%= image_tag("logo.png") %>
		</div>
		<%= render :partial => "common/home_nav_tab" %>
	</div>
	
	<section>
		
		<%= devise_error_messages! %>
	
		<h2>Reset Password</h2>
		
		<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:class => 'form-vertical', :method => :post }) do |f| %>
		  <fieldset>  
		  	<ul>
				  <li>
				  	<%= f.label 'Email' %>
			  		<%= f.text_field :email, :autofocus => true %>
					</li>
			  </ul>
		  </fieldset>
		  <fieldset class="formactions">
		  	<%= f.submit 'Send me Reset Password Instructions' %>
		  </fieldset>
		<% end %>
		
		<%= render "devise/shared/links" %>
		
	</section>
	
	<%= render :partial => "common/home_footer" %>
	
</div>
