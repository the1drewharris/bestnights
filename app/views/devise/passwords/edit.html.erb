<div id="wrapper">
	<div id="eyebrow">
		<%= render :partial => "common/home_nav_tab" %>
	</div>
	
	<section>
		
		<%= devise_error_messages! %>
	
		<h2>Change Your Password</h2>
		
		<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:class => 'form-vertical', :method => :put }) do |f| %>
			<%= f.hidden_field :reset_password_token %>
		  <fieldset>  
		  	<ul>
				  <li>
				  	<%= f.label 'New Password' %>
			  		<%= f.password_field :password, :autofocus => true %>
					</li>
					<li>
				  	<%= f.label 'Confirm New Password' %>
			  		<%= f.password_field :password_confirmation %>
					</li>
			  </ul>
		  </fieldset>
		  <fieldset class="formactions">
		  	<%= f.submit 'Change My Password' %>
		  </fieldset>
		<% end %>
		
		<%= render "devise/shared/links" %>
		
	</section>
	
	<%= render :partial => "common/home_footer" %>
	
</div>
