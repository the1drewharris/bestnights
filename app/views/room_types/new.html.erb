<% content_for :title, "BestNights.com - Add Room Type" %>

<header>
	<h1 class="prop-title">Add Room Type</h1>
</header>

<div id="container-main">
	<%= form_for @room_type do |f| %>
		<fieldset>
		  <ul>
		  	<li>
		  		<%= f.label 'Room Type*' %>
		  		<%= f.text_field :room_type %>
		  	</li>
		  	<% if current_user.admin? %>
		  	<li>
		  		<%= f.label :status %>
					<select id="client_comm" name="room_type[status]">
						<% ["active", "non-active", "non-viewable", "inactive"].each do |status| %>
						  <option value=<%= status %> <%= "selected" if status == "active" %> ><%= status %></option>
						<% end %>
					</select>
				</li>
				<li>
					<%= f.label 'Base Price' %>
					<%= f.text_field :base_price %>
				</li>
				<% end %>
		  </ul>	
		</fieldset>
		<fieldset class="formactions">
			<%= f.submit %>
		</fieldset>
	<% end %>
</div>

<%= javascript_include_tag :jquery_ujs %>