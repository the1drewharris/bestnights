<% content_for :title, "BestNights.com - Room Type" %>

<header>
	<h1>Room Type</h1>
</header>

<%= form_tag room_types_path, :id => "search_form", :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<div id="container-main">
	<div class="formactions">
		<%= link_to "Add", new_room_type_path %>
  </div>
	<table class="admintablelist">
		<tr>
			<th>Type</th>
			<th>Status</th>
			<th>Action</th>
		</tr>
		<% @room_types.each do |rt| %>
		  <tr>
		  	<td><%= rt.room_type %></td>
				<td><%= rt.status %></td>
				<% if can? :show, rt %>
					<td><%= link_to "Show", room_type_path(rt) %></td>
				<% end %>
				<% if can? :edit, rt %>
					<td><%= link_to "Edit", edit_room_type_path(rt) %></td>
				<% end %>
				<% if can? :delete, rt %>
					<td><%= link_to "Delete", room_type_path(rt), :method => :delete %></td>
				<% end %>	
		  </tr>
		<% end %>
	</table>
</div>

<%= javascript_include_tag :jquery_ujs %>