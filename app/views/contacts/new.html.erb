  <div id="wrapper" class="register">
  <div id="eyebrow">
    <%= render :partial => "common/home_nav_tab" %>   
  </div>
  <header>
    <h1 class="prop-title">Contact Us</h1>
  </header>
  <div id="container-main" class="contForm">
    <div class="con-section">
    <p><strong>Address:</strong><%= @site_contact.blank? ? "" : @site_contact.address %></p>
    <p><strong>Toll Free:</strong><%= @site_contact.blank? ? "" : @site_contact.phone_number %></p>
    <p><strong>Fax:</strong> <%= @site_contact.blank? ? "" : @site_contact.fax %></p>
    <p><strong>Email:</strong> <%= mail_to(@site_contact.blank? ? "" : @site_contact.email) %> </p>
    </div>
    <div class="con-section">
      <%= form_for(@contact, :html => { :class => 'form-horizontal new_contact', :autocomplete => :off }) do |f| %>
      <h4><strong>Contact Email:</strong></h4>
      <% if @contact.errors.any? %>
        <div id="error_explanation" class="error">
          <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact us form from being saved:</h2>

          <ul>
          <% @contact.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
        <label>Email: </label>
          <label>
            <%= f.text_field :email, :placeholder => "email", onblur: "if(this.placeholder=='') {this.placeholder='email'}",  onfocus: "if(this.placeholder=='email') {this.placeholder='';}" %>
          </label>
        <label>Name: </label>
          <label>
            <%= f.text_field :name, :placeholder => "name", :size => "30", onblur: "if(this.placeholder=='') {this.placeholder='name'}",  onfocus: "if(this.placeholder=='name') {this.placeholder='';}" %>
          </label>
        <label>Phone: </label>
          <label>
            <%= f.text_field :phone_number, :placeholder => "phone_number", :size => "30", onblur: "if(this.placeholder=='') {this.placeholder='phone_number'}",  onfocus: "if(this.placeholder=='phone_number') {this.placeholder='';}" %>
          </label>
        <label>Message: </label>
          <label>
            <%= f.text_area :message, rows: 10 %>
          </label>
        <input type="submit" name="button"> 
      <% end %>
    </div>
  </div>
  <%= render :partial => "common/home_footer" %>
</div>
