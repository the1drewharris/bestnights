<% content_for :title, "BestNights.com - Edit Traveler" %>

<header>
	<h1 class="prop-title">Edit Traveler</h1>
</header>

<div id="container-main">
	<%= form_for @traveler do |f| %>
		<fieldset>
		  <ul>
		  	<li>
		  		<label>First Name</label>
		  		<%= f.text_field :firstname %>
		  	</li>
		  	<li>
		  		<label>Last Name</label>
		  		<%= f.text_field :lastname %>
		  	</li>
		  	<li>
		  		<%= f.label :address %>
		  		<%= f.text_field :address1 %>
		  	</li>
		  	<li>
		  		<%= f.label :city %>
		  		<%= f.text_field :city %>
		  	</li>
		  	<li>
		  		<label>State/Province</label>
		  		<%= f.select :state_id, options_for_select(State.all.map{|s|[s.state_province, s.id]}) %>
		  	</li>
		  	<li>
		  		<label>Zip/Postal Code</label>
		  		<%= f.text_field :zip %>
		  	</li>
		  	<li>
		  		<%= f.label "Phone" %>
		  		<%= f.text_field :phone_number %>
		  	</li>		  	
		  </ul>	
		</fieldset>
		<fieldset class="formactions">
			<%= f.submit %>
		</fieldset>
	<% end %>
</div>