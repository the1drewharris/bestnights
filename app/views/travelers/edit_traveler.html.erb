<% content_for :title, "BestNights.com - Edit Travler" %>

<div id="wrapper" class="register">
<header>
	<h1 class="prop-title">Edit Travler</h1>
</header>
<div id="container-main">
	<%= form_for @traveler do |f| %>
		<fieldset>
		  <ul>
		  	<li>
		  		<%= f.label :firstname %>
		  		<%= f.text_field :firstname %>
		  	</li>
		  	<li>
		  		<%= f.label :lastname %>
		  		<%= f.text_field :lastname %>
		  	</li>
		  	<li>
		  		<%= f.label :password %>
		  		<%= f.password_field :password %>
		  	</li>
		  	<li>
		  		<%= f.label :password_confirmation %>
		  		<%= f.password_field :password_confirmation %>
		  	</li>
		  	<li>
		  		<%= f.label :address %>
		  		<%= f.text_field :address1 %>
		  	</li>
		  	<li>
		  		<%= f.label :city %>
		  		<%= f.text_field :city %>
		  	</li>
		  	<li>
		  		<%= f.label :state %>
		  		<%= f.select :state_id, options_for_select(State.all.map{|s|[s.state_province, s.id]}) %>
		  	</li>
		  	<li>
		  		<%= f.label :zip %>
		  		<%= f.text_field :zip %>
		  	</li>
		  	<li>
		  		<%= f.label "Phone" %>
		  		<%= f.text_field :phone_number %>
		  	</li>		  	
		  </ul>	
		</fieldset>
		<fieldset class="formactions">
			<%= f.submit %>
		</fieldset>
	<% end %>
	<div class="row back-link bking"><%= link_to "Back", traveler_path(session[:traveler_id]) , class: "link" %></div>
</div>
<%= render :partial => "common/home_footer" %>
</div>