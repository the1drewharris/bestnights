<% content_for :title, "BestNights.com - Default Messages" %>

<header>
	<h1>Default Messages</h1>
</header>

<%= form_tag default_messages_path, :id => "search_form", :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<div id="container-main">
	<div class="formactions">
		<%= link_to "Add", new_default_message_path %>
  </div>
	<table class="admintablelist">
		<tr>
			<th>Message</th>
			<th>Action</th>
			<th></th>
			<th></th>
		</tr>
		<% @default_messages.each do |dm| %>
		  <tr>
		  	<td><%= dm.message %></td>
		  	<% if can? :show, dm %>
					<td><%= link_to "Show", default_message_path(dm) %></td>
				<% end %>
				<% if can? :edit, dm %>
					<td><%= link_to "Edit", edit_default_message_path(dm) %></td>
				<% end %>	
				<% if can? :delete, dm %>
					<td><%= link_to "Delete", default_message_path(dm), :method => :delete %></td>
				<% end %>	
		  </tr>
		<% end %>
	</table>
</div>

<%= javascript_include_tag :jquery_ujs %>